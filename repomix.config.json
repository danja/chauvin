{
  "output": {
    "filePath": "chauvin-repomix.md",
    "style": "plain",
    "removeComments": false,
    "removeEmptyLines": false,
    "topFilesLength": 5,
    "showLineNumbers": false,
    "copyToClipboard": false
  },
  "include": [
    "**/*.md",
    "**/*.mdx",
    "**/*.ttl",
    "**/*.json",
    "**/*.ts"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      ".git",
      "docs/mcp-specs/docs"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  }
}